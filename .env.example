# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fraternitybase
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Supabase (if using Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_KEY=your_service_key

# Encryption Keys (CRITICAL - Keep these secure!)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ROSTER_ENCRYPTION_KEY=your_generated_encryption_key_here

# Alternative: Use AWS KMS or similar
# AWS_KMS_KEY_ID=arn:aws:kms:us-east-1:123456789:key/your-key-id
# AWS_REGION=us-east-1

# Email Notifications
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASSWORD=your_sendgrid_api_key

# Stripe (for payments)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Application Settings
NODE_ENV=development
APP_PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Security
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Import Settings
MAX_IMPORT_SIZE_MB=50
ALLOWED_IMPORT_FORMATS=csv,xlsx,xls
IMPORT_BATCH_SIZE=100

# Data Quality
MIN_DATA_COMPLETENESS=0.7
REQUIRE_EMAIL_VERIFICATION=true

# Audit & Compliance
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=2555
GDPR_COMPLIANCE_MODE=true